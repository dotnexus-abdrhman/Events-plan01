@model IEnumerable<EventPl.Dto.OrganizationDto>
@{
    ViewData["Title"] = "الجهات";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fas fa-building me-2"></i>الجهات</h2>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Organizations" asp-action="Create">
        <i class="fas fa-plus me-1"></i>جهة جديدة
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>الاسم بالعربي</th>
                        <th>الاسم بالإنجليزي</th>
                        <th>النوع</th>
                        <th>انتهاء الترخيص</th>
                        <th>الحالة</th>
                        <th>تاريخ الإنشاء</th>
                        <th class="text-end">إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td>@o.Name</td>
                        <td>@o.NameEn</td>
                        <td>@o.TypeName</td>
                        <td>@(o.LicenseExpiry?.ToString("yyyy/MM/dd") ?? "-")</td>
                        <td>
                            @if(o.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غير نشط</span>
                            }
                        </td>
                        <td>@o.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="Organizations" asp-action="Edit" asp-route-id="@o.OrganizationId">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                                <form asp-area="Admin" asp-controller="Organizations" asp-action="Delete" asp-route-id="@o.OrganizationId" method="post" onsubmit="return confirm('تأكيد الحذف؟');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> حذف
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

