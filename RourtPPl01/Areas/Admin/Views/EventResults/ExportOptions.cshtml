@model RourtPPl01.Areas.Admin.ViewModels.PdfExportOptionsVm
@{
    ViewData["Title"] = "تصدير النتائج (PDF)";
}

<div class="container mt-3">
    <h3 class="mb-3 text-end">خيارات تصدير النتائج (PDF)</h3>

    <form asp-action="ExportResultsPdf" asp-area="Admin" asp-controller="EventResults" method="post" enctype="multipart/form-data" class="text-end">
        <input type="hidden" asp-for="EventId" />

        <div class="card mb-3">
            <div class="card-header">الأقسام</div>
            <div class="card-body row g-3">
                <div class="col-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IncludeEventDetails" />
                        <label class="form-check-label" asp-for="IncludeEventDetails">تفاصيل الحدث</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IncludeSections" />
                        <label class="form-check-label" asp-for="IncludeSections">الأقسام/الأجندة</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IncludeAttachments" />
                        <label class="form-check-label" asp-for="IncludeAttachments">المرفقات</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IncludeSurveyAndResponses" />
                        <label class="form-check-label" asp-for="IncludeSurveyAndResponses">الاستبيانات وإجابات المشاركين</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IncludeDiscussions" />
                        <label class="form-check-label" asp-for="IncludeDiscussions">النقاشات والردود</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IncludeSignatures" />
                        <label class="form-check-label" asp-for="IncludeSignatures">التوقيعات</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">العلامة التجارية</div>
            <div class="card-body row g-3">
                <div class="col-6">
                    <label class="form-label" asp-for="LogoFile">شعار (اختياري)</label>
                    <input class="form-control" asp-for="LogoFile" type="file" accept="image/*" />
                </div>
                <div class="col-6">
                    <label class="form-label" asp-for="BrandingFooterText">نص التذييل</label>
                    <input class="form-control" asp-for="BrandingFooterText" />
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">المظهر</div>
            <div class="card-body row g-3">
                <div class="col-md-4">
                    <label class="form-label" asp-for="BackgroundImageFile">صورة الخلفية (اختياري)</label>
                    <input class="form-control" asp-for="BackgroundImageFile" type="file" accept="image/*" />
                    <div class="form-text">ستظهر كخلفية خفيفة لكل صفحة.</div>
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="BackgroundOpacity">شفافية الخلفية</label>
                    <input class="form-control" asp-for="BackgroundOpacity" type="number" min="0" max="1" step="0.05" />
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="FontColorHex">لون الخط</label>
                    <input class="form-control form-control-color" asp-for="FontColorHex" type="color" />
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="TableHeaderBackgroundColorHex">لون خلفية رأس جدول المشاركين</label>
                    <input class="form-control form-control-color" asp-for="TableHeaderBackgroundColorHex" type="color" />
                    <div class="form-text">اتركه فارغًا لاستخدام اللون الافتراضي (Teal).</div>
                </div>

                <div class="col-md-3">
                    <label class="form-label" asp-for="FontFamily">نوع الخط</label>
                    <select class="form-select" asp-for="FontFamily">
                        <option value="">الافتراضي</option>
                        <option>Cairo</option>
                        <option>Noto Kufi Arabic</option>
                        <option>Tajawal</option>
                        <option>Arial</option>
                        <option>Tahoma</option>
                        <option>Traditional Arabic</option>
                        <option>Segoe UI</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label" asp-for="BaseFontSize">حجم الخط الأساسي</label>
                    <input class="form-control" asp-for="BaseFontSize" type="number" min="8" max="20" />
                </div>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header">التحقق عبر QR</div>
            <div class="card-body row g-3">
                <div class="col-md-3">
                    <label class="form-label" asp-for="ShowQrCode">إظهار رمز QR</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ShowQrCode" />
                        <label class="form-check-label" asp-for="ShowQrCode">فعّال</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="ShowVerificationUrl">إظهار رابط التحقق النصي</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ShowVerificationUrl" />
                        <label class="form-check-label" asp-for="ShowVerificationUrl">فعّال</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="QrCodeSize">حجم QR (px)</label>
                    <input class="form-range" asp-for="QrCodeSize" type="range" min="30" max="80" step="1" />
                </div>
                <div class="col-md-3">
                    <label class="form-label" asp-for="QrCodePosition">موضع QR</label>
                    <select class="form-select" asp-for="QrCodePosition">
                        <option value="BottomLeft">أسفل يسار</option>
                        <option value="BottomCenter">أسفل وسط</option>
                        <option value="BottomRight">أسفل يمين</option>
                    </select>
                </div>
            </div>
        </div>


        <div class="d-flex gap-2 justify-content-end">
            <a asp-action="Summary" asp-route-eventId="@Model.EventId" class="btn btn-outline-secondary">رجوع</a>
            <button type="submit" class="btn btn-primary">توليد وتحميل PDF</button>
        </div>
    </form>
</div>

