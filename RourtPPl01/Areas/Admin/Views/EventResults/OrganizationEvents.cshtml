@model IEnumerable<EvenDAL.Models.Classes.Event>
@{
    var org = ViewBag.Organization as EvenDAL.Models.Classes.Organization;
    ViewData["Title"] = $"\u0623\u062d\u062f\u0627\u062b - {org?.Name ?? org?.NameEn ?? ""}";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fas fa-calendar-alt me-2"></i> @ViewData["Title"]</h2>
    <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="EventResults" asp-action="Organizations">
        <i class="fas fa-arrow-right me-1"></i> \u0639\u0648\u062f\u0629
    </a>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                <tr>
                    <th>\u0627\u0644\u0639\u0646\u0648\u0627\u0646</th>
                    <th>\u0627\u0644\u0648\u0636\u0639</th>
                    <th>\u0627\u0644\u0628\u062f\u0627\u064a\u0629</th>
                    <th>\u0627\u0644\u0646\u0647\u0627\u064a\u0629</th>
                    <th class="text-end">\u0627\u0644\u0646\u062a\u0627\u0626\u062c</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Title</td>
                        <td>@e.Status</td>
                        <td>@e.StartAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td>@e.EndAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="EventResults" asp-action="Summary" asp-route-eventId="@e.EventId">
                                \u0639\u0631\u0636 \u0627\u0644\u0645\u0644\u062e\u0635
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

