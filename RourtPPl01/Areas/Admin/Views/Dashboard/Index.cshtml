@model DashboardViewModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="row mb-4">
    <div class="col-12">
        <h2 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>لوحة التحكم</h2>
        <p class="text-muted">نظرة عامة على النظام</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card text-center" style="border-right:4px solid #4A90E2">
            <div class="card-body">
                <i class="fas fa-calendar-alt fa-3x mb-3" style="color:#4A90E2"></i>
                <h3 class="mb-0">@Model.TotalEvents</h3>
                <p class="text-muted mb-0">إجمالي الأحداث</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center" style="border-right:4px solid #5CB85C">
            <div class="card-body">
                <i class="fas fa-calendar-check fa-3x mb-3" style="color:#5CB85C"></i>
                <h3 class="mb-0">@Model.ActiveEvents</h3>
                <p class="text-muted mb-0">الأحداث النشطة</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center" style="border-right:4px solid #F0AD4E">
            <div class="card-body">
                <i class="fas fa-users fa-3x mb-3" style="color:#F0AD4E"></i>
                <h3 class="mb-0">@Model.TotalUsers</h3>
                <p class="text-muted mb-0">المستخدمون</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center" style="border-right:4px solid #9B59B6">
            <div class="card-body">
                <i class="fas fa-building fa-3x mb-3" style="color:#9B59B6"></i>
                <h3 class="mb-0">@Model.TotalOrganizations</h3>
                <p class="text-muted mb-0">الجهات</p>
            </div>
        </div>
    </div>
</div>


<div class="row g-4 mb-4">
    <div class="col-lg-3">
        <div class="card h-100">
            <div class="card-header"><i class="fas fa-bolt me-2"></i>إجراءات سريعة</div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Events" asp-action="Create"><i class="fas fa-plus me-1"></i>حدث جديد</a>
                    <a class="btn btn-success" asp-area="Admin" asp-controller="Organizations" asp-action="Create"><i class="fas fa-building me-1"></i>إنشاء جهة</a>
                    <a class="btn btn-dark" asp-area="Admin" asp-controller="Admins" asp-action="CreateOrPromote"><i class="fas fa-user-shield me-1"></i>إنشاء/ترقية مسؤول</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="row g-4">
            <div class="col-md-7">
                <div class="card h-100">
                    <div class="card-header"><i class="fas fa-chart-line me-2"></i>نظرة سريعة</div>
                    <div class="card-body">
                        <canvas id="homeChart" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card h-100">
                    <div class="card-header"><i class="fas fa-bell me-2"></i>التنبيهات</div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><i class="fas fa-info-circle text-info me-1"></i>لا توجد تنبيهات حالياً</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if(Model.RecentEvents.Any())
{
    <div class="card">
        <div class="card-header">
            <i class="fas fa-clock me-2"></i>الأحداث الأخيرة
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>العنوان</th>
                            <th>تاريخ البدء</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var evt in Model.RecentEvents)
                        {
                            <tr>
                                <td>@evt.Title</td>
                                <td>@evt.StartAt.ToString("yyyy/MM/dd")</td>
                                <td>
                                    @if(evt.Status == "Active")
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else if(evt.Status == "Draft")
                                    {
                                        <span class="badge bg-secondary">مسودة</span>
                                    }
                                    else if(evt.Status == "Completed")
                                    {
                                        <span class="badge bg-primary">مكتمل</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">ملغي</span>
                                    }
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Events" asp-action="Details" asp-route-id="@evt.EventId" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye me-1"></i>عرض
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function(){
            var ctx = document.getElementById('homeChart');
            if(!ctx) return;
            var chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['الأحداث', 'النشطة', 'المستخدمون', 'الجهات'],
                    datasets: [{
                        label: '\u0624\u0634\u0627\u0631\u0629 \u0633\u0631\u064a\u0639\u0629',
                        data: [@Model.TotalEvents, @Model.ActiveEvents, @Model.TotalUsers, @Model.TotalOrganizations],
                        borderColor: '#4A90E2',
                        backgroundColor: 'rgba(74,144,226,0.15)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: { plugins: { legend: { display:false } }, scales: { y: { beginAtZero:true } } }
            });
        })();
    </script>
}

