@model RourtPPl01.Areas.Admin.ViewModels.UsersIndexViewModel
@{
    ViewData["Title"] = "المستخدمون";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fas fa-users me-2"></i>المستخدمون</h2>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Create">
        <i class="fas fa-user-plus me-1"></i>إنشاء مستخدم جديد
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="search" id="userSearch" class="form-control" placeholder="ابحث بالاسم أو البريد أو الهاتف أو أي حقل ظاهر في الجدول">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle" id="usersTable">
                <thead>
                    <tr>
                        <th class="text-muted" style="width:56px">#</th>
                        <th>الاسم الكامل</th>
                        <th>البريد الإلكتروني</th>
                        <th>رقم الجوال</th>
                        <th>المجموعة</th>

                        <th>الدور</th>
                        <th>الحالة</th>
                        <th>تاريخ الإنشاء</th>
                        <th class="text-end">إجراءات</th>

                    </tr>
                </thead>
                @{ var rowIndex = 0; }
                <tbody>
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td class="text-muted">@(++rowIndex)</td>
                        <td>@u.FullName</td>
                        <td>@u.Email</td>
                        <td>@u.Phone</td>
                        <td>@u.OrganizationName</td>
                        <td>@(u.RoleName switch { "Admin" => "المدير التنفيذي", "Organizer" => "عضو مجلس إدارة", "Attendee" => "عضو", "Observer" => "مراقب", _ => u.RoleName })</td>
                        <td>
                            @if(u.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غير نشط</span>
                            }
                        </td>
                        <td>@u.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@u.UserId">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                                <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@u.UserId" method="post" onsubmit="return confirm('تأكيد الحذف؟');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> حذف
                                    </button>
                                </form>
                            </div>

                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
(function(){
  const input = document.getElementById('userSearch');
  const table = document.getElementById('usersTable');
  if(!input || !table) return;
  const tbody = table.tBodies && table.tBodies[0];
  const rows = Array.from(tbody ? tbody.rows : []);
  const cache = rows.map(r => ({ row: r, text: (r.innerText || '').toLowerCase() }));
  let timer = null;
  function applyFilter(q){
    const query = (q || '').trim().toLowerCase();
    cache.forEach(({row, text}) => {
      row.style.display = (query === '' || text.includes(query)) ? '' : 'none';
    });
  }
  input.addEventListener('input', function(){
    if (timer) clearTimeout(timer);
    const val = this.value;
    timer = setTimeout(() => applyFilter(val), 75);
  }, { passive: true });
})();
</script>


