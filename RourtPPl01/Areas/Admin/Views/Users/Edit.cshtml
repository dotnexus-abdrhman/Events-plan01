@model RourtPPl01.Areas.Admin.ViewModels.UsersCreatePageViewModel
@{
    ViewData["Title"] = "تعديل مستخدم";
    var userId = (Guid)(ViewBag.UserId ?? Guid.Empty);
}

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-0"><i class="fas fa-user-edit me-2"></i>تعديل مستخدم</h2>
            <p class="text-muted">قم بتحديث بيانات المستخدم ثم احفظ</p>
        </div>
        <div>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-right me-1"></i>عودة</a>
        </div>
    </div>
</div>

@if(TempData["Error"] != null)
{
    <div class="alert alert-danger"><i class="fas fa-exclamation-circle me-1"></i>@TempData["Error"]</div>
}

<div class="card">
    <div class="card-body">
        <form asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@userId" method="post">
            @Html.AntiForgeryToken()

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Form.FullName" class="form-label">الاسم الكامل <span class="text-danger">*</span></label>
                    <input asp-for="Form.FullName" class="form-control" placeholder="الاسم" />
                    <span asp-validation-for="Form.FullName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Form.Email" class="form-label">البريد الإلكتروني <span class="text-danger">*</span></label>
                    <input asp-for="Form.Email" type="email" class="form-control" placeholder="user@domain.com" />
                    <span asp-validation-for="Form.Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Form.Phone" class="form-label">رقم الجوال</label>
                    <input asp-for="Form.Phone" class="form-control" placeholder="0500000000" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Form.OrganizationId" class="form-label">الجهة <span class="text-danger">*</span></label>
                    <select asp-for="Form.OrganizationId" class="form-select" asp-items="@(new SelectList(Model.Organizations, nameof(RourtPPl01.Areas.Admin.ViewModels.OrgItem.OrganizationId), nameof(RourtPPl01.Areas.Admin.ViewModels.OrgItem.Name)))">
                        <option value="">-- اختر الجهة --</option>
                    </select>
                    <span asp-validation-for="Form.OrganizationId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Form.RoleName" class="form-label">الدور</label>
                    <select asp-for="Form.RoleName" class="form-select" asp-items="Model.Roles"></select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <div class="form-check">
                        <input asp-for="Form.IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="Form.IsActive" class="form-check-label">مفعّل</label>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>حفظ</button>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

