@{
    Layout = null;
    var okMsg = TempData["ok"] as string;
    var errMsg = TempData["err"] as string;
}
<div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index:1080">

    @if (!string.IsNullOrWhiteSpace(okMsg))
    {
        <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body"><i class="bi bi-check2-circle me-1"></i> @okMsg</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(errMsg) || (ViewData.ModelState?.ErrorCount ?? 0) > 0)
    {
        var msg = errMsg ?? "حدثت أخطاء، فضلاً تحقّق من الحقول.";
        <div class="toast align-items-center text-bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body"><i class="bi bi-exclamation-triangle me-1"></i> @msg</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>
